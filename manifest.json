{
  "manifest_version": 3,
  "name": "Browser History Manager",
  "version": "1.0.0",
  "description": "A Chrome extension to view, search, and manage browser history",
  "permissions": [
    "history",
    "storage",
    "activeTab",
    "contextMenus"
  ],
  "action": {
    "default_title": "Browser History Manager"
  },
  "background": {
    "service_worker": "background-simple.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

